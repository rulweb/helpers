{
    "name": "rulweb/helpers",
    "description": "Хелперы для Laravel Framework",
    "license": "MIT",
    "authors": [
        {
            "name": "RuleZzz",
            "email": "rul22rus@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "laravel/framework": "5.8.*",
        "ext-intl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.6",
        "doctrine/dbal": "^2.9"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "files":  [
            "src/helpers/datetime.php",
            "src/helpers/json.php",
            "src/helpers/price.php",
            "src/helpers/user.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
